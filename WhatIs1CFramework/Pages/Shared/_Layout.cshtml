@inject WhatIs1CFramework.Data.WhatIs1CFrameworkContext _context
@{
//    var TheContext = ViewData["Context"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - What Is 1C Framework</title>
    <link href="~/w.ico" rel="icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/site.css" type="text/css" />
</head>
<body>
    <header>
        <!--<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">-->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WhatIs1CFramework</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
    <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-5">
                <partial name="_NavigationBar" model="@new _NavigationBarModel(_context)" />        
            </div>
            <div class="col-lg-9 col-md-8 col-sm-7">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        <!--</div> -->
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - WhatIs1CFramework - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--<script>
        $(document).ready(function () {
            $("sidebarCollapse").click(function () {
                $("sidebar").toggleClass("active");
            });
        });</script>-->

    @RenderSection("Scripts", required: false)
</body>
</html>
