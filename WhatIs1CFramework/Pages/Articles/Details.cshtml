@page
@model WhatIs1CFramework.Pages.Articles.DetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>@Html.DisplayFor(model => model.Article.Title)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Article.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Article.ReleaseDate)
            </dd>
            
         </dl>
        <div class="col-sm-12">
            @Html.DisplayFor(model => model.Article.Text)
        </div>
        <!-- added when Pictures added
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Pictures)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Article ID</th>
                    <th>File name</th>
                    <th>Picture</th>
                </tr>
                @foreach (var item in Model.Article.Pictures)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArticleID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageTitle)
                        </td>
                        <td>
                            <img src=@File(item.ImageByte, "image/jpg")
                                    style="max-width:10%;"/>
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <!-- added when Pictures added -->
        
    </div>
    <!--
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Article.ID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
    -->
</body>
</html>
