@page
@model WhatIs1CFramework.Pages.Articles.CreateModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Article</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Article.Title" class="control-label"></label>
                    <input asp-for="Article.Title" class="form-control" />
                    <span asp-validation-for="Article.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Article.ReleaseDate" class="control-label"></label>
                    <input asp-for="Article.ReleaseDate" class="form-control" />
                    <span asp-validation-for="Article.ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Article.Text" class="control-label"></label>
                    <textarea asp-for="Article.Text" class="form-control" rows="100" cols="100"></textarea>
                    <span asp-validation-for="Article.Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Article.Display" class="control-label"></label>
                    <textarea asp-for="Article.Display" class="form-control" rows="100" cols="100"></textarea>
                    <span asp-validation-for="Article.Display" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Article.SortOrder" class="control-label"></label>
                    <textarea asp-for="Article.SortOrder" class="form-control" rows="100" cols="100"></textarea>
                    <span asp-validation-for="Article.SortOrder" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <!-- added when Pictures added -->
                <table class="table">
                    <tr>
                        <th>Course Title</th>
                        <th>Grade</th>
                        <th>Option</th>
                    </tr>
                    @if (Model.Article != null)
                    {
                        foreach (var item in Model.Article.Pictures)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ArticleID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageTitle)
                                </td>
                                <td>
                                    There will be an Image
                                </td>
                            </tr>
                        }
                    }
                </table>
                Choose Files: <input type="file" name="files" accept="image/*" />
                <!-- added when Pictures added -->
            </form>
        </div>
    </div>

    <!--<div>
        <form method="post" enctype="multipart/form-data">
            Choose Files: <input type="file" name="files" accept="image/*"/>
            <input type="submit" value="Upload"/>
        </form>
    </div>-->

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
