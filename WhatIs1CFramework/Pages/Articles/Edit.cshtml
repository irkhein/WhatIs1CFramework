@page
@model WhatIs1CFramework.Pages.Articles.EditModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.ID" />
            <div class="form-group">
                <label asp-for="Article.Title" class="control-label"></label>
                <input asp-for="Article.Title" class="form-control" />
                <span asp-validation-for="Article.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ReleaseDate" class="control-label"></label>
                <input asp-for="Article.ReleaseDate" class="form-control" />
                <span asp-validation-for="Article.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Text" class="control-label"></label>
                <!--<iput asp-for="Article.Text" class="form-control" /> -->
                <textarea class="form-control" asp-for="Article.Text" rows="100" cols="100"></textarea>
                <span asp-validation-for="Article.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Display" class="control-label"></label>
                <input asp-for="Article.Display" class="form-control" />
                <span asp-validation-for="Article.Display" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.SortOrder" class="control-label"></label>
                <input asp-for="Article.SortOrder" class="form-control" />
                <span asp-validation-for="Article.SortOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
